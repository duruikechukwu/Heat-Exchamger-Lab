                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Text="Window Flow Area (Sw)" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtSw" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtSwUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Text="Heat Transfer Area (A)" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtA" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtAUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>

                <TextBlock Text="OTHER PARAMETERS" TextAlignment="Center" Padding="0,5" FontWeight="ExtraBold" Height="25" Background="LightGray"/>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Text="Material of Construction" Height="25" Width="340" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtMaterial" Height="25" Width="160" TextAlignment="Left" Padding="0,5"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="WhiteSmoke">
                    <TextBlock Text="Fraction of Tubes in Cross Flow (Fc)" Height="25" Width="340" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtFc" Height="25" Width="160" TextAlignment="Left" Padding="0,5"/>
                    
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="WhiteSmoke">
                    <TextBlock Text="Fraction of Tubes in one Baffle Window (Fw)" Height="25" Width="340" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtFw" Height="25" Width="160" TextAlignment="Left" Padding="0,5"/>

                </StackPanel>
            

                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Text="Number of Tube Rows Crossed Between Baffle Tips (Nc)" Height="25" Width="340" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtNc" Height="25" Width="160" TextAlignment="Left" Padding="0,5"/>
                    
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="WhiteSmoke">
                    <TextBlock Text="Number of Tube Rows Crossed in One Baffle Window(Ncw)" Height="25" Width="340" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtNcw" Height="25" Width="160" TextAlignment="Left" Padding="0,5"/>
                    
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="WhiteSmoke">
                    <TextBlock Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
