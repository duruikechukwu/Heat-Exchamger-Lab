                    <TextBlock x:Name="txtDctl" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtDctlUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Width="500">
                <TextBlock Text="FLOW AREAS" TextAlignment="Center" Padding="0,5" FontWeight="ExtraBold" Height="25" Background="LightGray"/>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Text="Cross Flow Area (Sm)" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtSm" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtSmUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="WhiteSmoke">
                    <TextBlock Text="Tube-To-Baffle Leakage Area (Stb)" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtStb" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtStbUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
                    <TextBlock Text="Shell-To-Baffle Laekage Area (Ssb)" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtSsb" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
