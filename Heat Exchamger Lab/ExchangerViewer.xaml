                    <TextBlock x:Name="txtL" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtLUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="White">
