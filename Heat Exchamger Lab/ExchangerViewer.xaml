<Window x:Class="Heat_Exchamger_Lab.ExchangerViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HEAT EXCHANGER PROPERTIES" Height="680" Width="1050" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" ShowInTaskbar="False" Icon="Icons/ex.jpg">
    <Grid Background="White" HorizontalAlignment="Center">
        <StackPanel Height="610" VerticalAlignment="Top" Background="Transparent" Orientation="Horizontal">
