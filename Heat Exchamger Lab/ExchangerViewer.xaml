                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Background="WhiteSmoke">
                    <TextBlock Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
