                    <TextBlock x:Name="txtBout" Height="25" Width="200" TextAlignment="Left" Padding="0,5"/>
                    <TextBlock x:Name="txtBoutUnit" Height="25" Width="100" TextAlignment="Left" Padding="0,5"/>
